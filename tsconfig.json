{
    "compilerOptions": {
        "outDir": "./target/",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "module": "es6",
        "target": "es2016",
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "allowJs": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "../smarthealth-webui-war",
        "typeRoots": ["node_modules/@types"],
        "types": ["node", "jest"],
        "paths": {
            "assets/*": [
                "src/main/assets/*"
            ],
            "main/*": [
                "src/main/javascript/*"
            ],
            "test/*": [
                "src/test/javascript/*"
            ]
        }
    },
    "include": [
        "src/*/javascript/*/*.tsx"
      ]
}

